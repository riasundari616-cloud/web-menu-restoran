<!-- ================= CART ================= -->
<div id="cart">
    <button onclick="toggleCart()">Tutup</button>
    <h3>Keranjang Belanja</h3>
    <div id="items"></div>
    <p>Total : Rp <span id="total">0</span></p>
    <button class="checkout" onclick="checkoutWA()">Checkout WhatsApp</button>
</div>

<script>

let cart = {};
let total = 0;

function addItem(nama, harga){
    if(!cart[nama]){
        cart[nama] = { qty:0, price:harga };
    }
    cart[nama].qty++;
    renderCart();
}

function renderCart(){
    let html = "";
    let count = 0;
    total = 0;

    for(let i in cart){
        html += `<div class="cart-item"><span>${i}</span><span>${cart[i].qty}</span></div>`;
        count += cart[i].qty;
        total += cart[i].qty * cart[i].price;
    }

    document.getElementById("items").innerHTML = html;
    document.getElementById("count").innerText = count;
    document.getElementById("total").innerText = total;
}

function toggleCart(){
    document.getElementById("cart").classList.toggle("active");
}

function checkoutWA(){
    let text = "Pesanan Toko Ria Sundari%0A";
    text += "Jl. Glugur Rimbun, Diski%0A%0A";
    for(let i in cart){
        text += i + " x" + cart[i].qty + "%0A";
    }
    text += "%0ATotal: Rp " + total;
    window.open("https://wa.me/62XXXXXXXXXX?text=" + text);
}

</script>

